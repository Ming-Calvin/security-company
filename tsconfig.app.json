{
  // 继承自 @vue/tsconfig/tsconfig.dom.json，为浏览器环境提供了很多有用的默认配置
  "extends": "@vue/tsconfig/tsconfig.dom.json",

  // 指定此配置文件应用于哪些文件
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],
  // 指定要排除的文件
  "exclude": ["src/**/__tests__/*"],

  // 编译器选项
  "compilerOptions": {
    // ---- 核心配置 ----
    // `composite` 必须为 true，因为我们在根 tsconfig.json 中使用了 "references"
    "composite": true,
    // 定义路径别名的基础 URL
    "baseUrl": ".",
    // 定义 @/* 别名，使其指向 src/* 目录
    "paths": {
      "@/*": ["src/*"]
    },
    // ---- 解决 "Cannot find name 'process'" 问题的关键 ----
    // 明确告诉 TypeScript，在检查代码时，除了 DOM 类型外，也要识别 Node.js 的全局类型

    // ---- 其他推荐的现代配置 ----
    // 编译目标为最新的 ECMAScript 版本
    "target": "ESNext",
    // 模块系统使用 ESNext
    "module": "ESNext",
    // 模块解析策略
    "moduleResolution": "Bundler",
    // 允许 .json 文件的导入
    "resolveJsonModule": true,
    // 允许默认导入 CommonJS 模块
    "esModuleInterop": true,
    // 确保每个文件都可以被安全地独立编译
    "isolatedModules": true,
    // 不生成编译产物（因为 Vite 会处理）
    "noEmit": true,
    // 开启所有严格类型检查选项
    "strict": true,
    // 跳过对所有 .d.ts 声明文件的类型检查
    "skipLibCheck": true
  }
}